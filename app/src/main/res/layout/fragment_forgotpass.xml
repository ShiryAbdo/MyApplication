<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_hospital"
    tools:context="com.example.shady.myapplication.activities.LoginActivity">

    <ImageView
        android:id="@+id/image_medicine_logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/zoo_logo" />

    <TextView
        android:id="@+id/text_medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_medicine_logo"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:text="Forgot your password?"
        android:textColor="@color/textPrimary"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_medicine"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Please enter the email adress registered on your account"
        android:textColor="@color/textPrimary"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_reset"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_email_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:ems="10"
            android:hint="Email adress"
            android:inputType="text"
            android:paddingLeft="@dimen/text_left_padding"
            android:textColorHint="@color/textSecondary"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#a9b0c3"></LinearLayout>

        <TextView
            android:id="@+id/text_reset_reset"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/round"
            android:gravity="center"
            android:padding="14dp"
            android:text="Reset Password"
            android:textColor="@color/gray_line"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
