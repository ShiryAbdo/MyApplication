<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:tag="cards main container"
    android:background="#ffffff">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="40dp"

        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#86b5d8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:id="@+id/iv_image"
                        android:tag="image_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="70sp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/show_pill"/>

                    <TextView
                        android:id="@+id/text_drugName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="left"
                        android:textColor="@color/textPrimary"
                        android:text="Omega 3"
                        android:textStyle="bold"
                        />

                    <!--<TextView-->
                    <!--android:id="@+id/text_dosage"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="left"-->
                    <!--android:text="4.5mg"-->
                    <!--android:textColor="@color/gray_line"-->
                    <!--android:textAppearance="?android:attr/textAppearanceSmall"/>-->
                    <TextView
                        android:layout_weight="2"
                        android:id="@+id/text_dateTime"
                        android:text="Mars 25, 2017 1:50 PM"
                        android:gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_line"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    >
                    <CheckBox
                        android:text="Token"
                        android:id="@+id/check_taken"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/image_edit"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/editt"/>
                    <ImageView
                        android:id="@+id/cancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ccancel"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>
