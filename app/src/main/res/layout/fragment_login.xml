<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    tools:context="com.example.shady.myapplication.activities.LoginActivity">

    <ImageView
        android:id="@+id/image_medicine_logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/zoo_logo"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Medicine Reminder"
        android:textColor="@color/textFont"
        android:gravity="center"
        android:layout_below="@+id/image_medicine_logo"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        />

    <TextView
        android:id="@+id/text_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textColor="@color/textFont"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_below="@+id/text_medicine"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="80sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2">


        <EditText
            android:id="@+id/edit_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:textColor="@color/textPrimary"
            android:ems="10"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColorHint="@color/textSecondary"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"
            >
        </LinearLayout>


        <EditText
            android:id="@+id/edit_password_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#00000000"
            android:ems="10"
            android:hint="PASSWORD"
            android:imeActionId="@+id/login"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:textColor="@color/textPrimary"
            android:textColorHint="@color/textSecondary"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a9b0c3"
            android:layout_marginTop="10dp"
            >
        </LinearLayout>

        <TextView
            android:id="@+id/text_signIn_login"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:background="@drawable/round"
            android:textColor="@color/gray_line"
            android:gravity="center"
            android:padding="14dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or sign in with:"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/textFont"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/main"
            android:layout_marginTop="20dp"
            android:gravity="center"
            tools:ignore="ObsoleteLayoutParam">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fb"
                android:layout_marginRight="5dp"
                android:id="@+id/image_social_facebook" />

            <ImageView
                android:id="@+id/image_social_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/google"/>

            <ImageView
                android:id="@+id/image_social_twitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/twiter" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/text_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Don't Have An Account ?"
            android:textStyle="bold"
            android:textColor="@color/textFont"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/text_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="13dp"
            android:textStyle="bold"
            android:textColor="@color/textFont"

            />
    </LinearLayout>


</RelativeLayout>
