<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/fragment_edit"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:background="@drawable/gradiant">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".86"

            android:orientation="vertical"
            android:padding="6dp"
            android:gravity="center"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_pig"
                />

            <!--<android.support.v7.widget.CardView-->
            <!--xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/card_view"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="#ffff"-->
            <!--card_view:cardCornerRadius="20dp"-->
            <!--card_view:cardBackgroundColor="@color/white">-->


            <!--<TextView-->
            <!--android:layout_margin="15dp"-->
            <!--android:gravity="center"-->
            <!--android:text="Edite your Profil"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:typeface="sans"-->
            <!--android:id="@+id/textView4"-->
            <!--android:textColor="@color/blue_light" />-->

            <!--</android.support.v7.widget.CardView>-->


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".86"

            android:orientation="vertical"
            android:padding="6dp"
            android:gravity="center"
            android:id="@+id/linearLayoutC">

            <android.support.v7.widget.CardView

                android:id="@+id/card_view_user_name"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/roundwhite"
                    >

                    <ImageView
                        android:id="@+id/pass"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_icon"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:paddingLeft="10dp"
                        android:hint="your user NAME"
                        android:inputType="textPersonName"
                        android:textColorHint="#0f0535"
                        android:textColor="#030112"
                        android:layout_margin="10dp"
                        android:layoutDirection="inherit"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:letterSpacing="0.1"
                        android:layout_weight="3"
                        android:id="@+id/edit_username"
                        />


                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".86"

            android:orientation="vertical"
            android:padding="6dp"
            android:gravity="center"
            android:id="@+id/linearLayoutcc">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_password"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundwhite"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/card_view_user_name"
                android:layout_centerHorizontal="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/roundwhite"
                    >

                    <ImageView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/massage"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"
                        />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center"
                        android:hint="your userClass email"
                        android:inputType="textEmailAddress"
                        android:layout_margin="10dp"
                        android:layoutDirection="inherit"
                        android:textColorHint="#060112"
                        android:textColor="#070218"
                        android:textSize="20dp"
                        android:letterSpacing="0.1"
                        android:layout_weight="4"
                        android:id="@+id/edit_email"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".86"

            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center"
            android:id="@+id/linearLayoutccc">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_done"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#ffff"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/white"
                android:layout_margin="50dp"
                android:layout_marginRight="46dp"
                android:layout_marginEnd="46dp"
                android:layout_below="@+id/card_view_password"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Done"
                    android:typeface="sans"
                    android:id="@+id/text_done"
                    android:textColor="@color/blue_light"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/card_view_done"
                    android:layout_alignStart="@+id/card_view_done"
                    android:textStyle="normal|bold|italic"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view_RESET_password"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#ffff"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"


                android:layout_below="@+id/card_view_password"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Reset password"
                    android:typeface="sans"
                    android:id="@+id/text_reset_password"
                    android:textColor="@color/blue_light"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/card_view_done"
                    android:layout_alignStart="@+id/card_view_done"
                    android:textStyle="normal|bold|italic"
                    />
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
